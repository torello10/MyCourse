@model CourseCreateinputModel
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Digita un titolo">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fas fa-star"></i>Crea corso!</button>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_Validation"></partial>
}